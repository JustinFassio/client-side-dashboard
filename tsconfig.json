{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@dashboard/*": ["dashboard/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./dashboard/types"
    ]
  },
  "include": [
    "assets/src/**/*",
    "dashboard/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
} 